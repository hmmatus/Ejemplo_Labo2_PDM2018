<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.manrique_matus.ejemplo_labo2_pdm2018.MainActivity">

<!--hint es un mensaje que se muestra si no hay nada dentro de la caja de texto
    inputType es el tipo de teclado de cel que aparece al darle tab a la caja de texto-->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editT"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Ingresar usuario"
        android:inputType="text"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/button_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editT"
        android:layout_alignRight="@+id/editT"
        android:layout_below="@+id/editT"
        android:text="Ingresar"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:text="Bienvendido:"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:onClick="reset"/>
<!--El onClick tiene el mismo nombre que la funcion java-->
    <TextView
        android:id="@+id/text2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text=""
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Autor: Hector Manrique Matus Henriquez #00066015"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textStyle="bold"/>

</RelativeLayout>
